@model AuthorDetailVM

@{
    ViewData["Title"] = "Detail";
}

<style>

    body{
        background-color: #F4F5F7;
    }
</style>

<div class="col-lg-9 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Course Author Detail Table</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Created Date
                            </th>
                            <th>
                                Full Name
                            </th>
                            <th>
                                Age
                            </th>
                            <th>
                                Address
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <img src="~/images/@Model.Image" alt="image" style="with:50px;height:50px" />
                            </td>
                            <td>
                                @Model.CreatedDate
                            </td>
                            <td>
                                @Model.FullName
                            </td>
                            <td>
                                @Model.Age
                            </td>
                            <td>
                                
                                @Model.Address
                            </td>

                        </tr>

                    </tbody>
                </table>
            </div>
            <br></br>
            <a asp-action="Index" class="btn btn-outline-info btn-fw">Back</a>
        </div>
    </div>

</div>




