@model NewsAuthorDetailVM

@{
    ViewData["Title"] = "Detail";
}

<style>  

    body {
        background-color: #F4F5F7;
    }

</style>

<div class="col-lg-10 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">News Author Detail Table</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Full Name
                            </th>
                            <th>
                                Created Date
                            </th>
                            <th>
                                Age
                            </th>
                            <th>
                                Address
                            </th>
                          
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                               @Model.FullName
                            </td>
                            <td>
                                @Model.CreatedDate
                            </td>
                            <td>
                                @Model.Age
                            </td>
                            <td>
                                @Model.Address
                            </td>                        

                        </tr>

                    </tbody>
                </table>
            </div>
            <br></br>
            <a asp-action="Index" class="btn btn-outline-info btn-fw">Back</a>
        </div>
    </div>

</div>

